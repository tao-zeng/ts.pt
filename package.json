{
	"name": "ts.pt",
	"description": "A Typescript Project Template",
	"version": "1.0.0",
	"branch": "alpha",
	"publishConfig": {
		"access": "public"
	},
	"namespace": "ts_pt",
	"bundle": "ts.pt",
	"main": "dist/ts.pt.js",
	"module": "dist/ts.pt.esm.js",
	"types": "dist/ts.pt.d.ts",
	"homepage": "https://github.com/tao-zeng/ts.pt",
	"author": "Tao Zeng <tao.zeng.zt@qq.com>",
	"bugs": {
		"url": "https://github.com/tao-zeng/ts.pt/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/tao-zeng/ts.pt.git"
	},
	"keywords": [
		"Project Template",
		"Babel Typescript",
		"Rollup",
		"Semantic Release",
		"Release",
		"Deploy",
		"CI",
		"Appveyor"
	],
	"files": [
		"dist",
		"doc",
		"CHANGELOG.md",
		"README.md",
		"LICENSE"
	],
	"private": false,
	"license": "MIT",
	"scripts": {
		"preinstall": "git config --local commit.template .gitmessage",
		"clean:dist": "rimraf dist",
		"clean:doc": "rimraf doc",
		"clean:cover": "rimraf coverage",
		"clean": "rimraf dist doc coverage",
		"lint": "tslint -c tslint.json ./src/**/*.ts",
		"check": "tsc --noEmit",
		"dts": "dts-bundle-generator -o dist/argilo.d.ts src/index.ts",
		"mocha": "mocha --opts mocha.opts src/**/*.spec.ts",
		"unit:node": "cross-env NODE_ENV=test nyc mocha src/**/*.spec.ts",
		"unit:browser": "karma start config/karma.config.js",
		"unit:sauce": "karma start config/karma.sauce.config.js",
		"compile": "rollup -c config/rollup.config.js --environment NODE_ENV:production",
		"compile:dev": "rollup -c config/rollup.config.js --environment NODE_ENV:development",
		"doc": "typedoc --options typedoc.json",
		"perf:browser": "karma start config/karma.perf.config.js",
		"package": "npm-run-all clean lint check dts compile doc"
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -c -x @commitlint/config-conventional -e $GIT_PARAMS"
		}
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	},
	"devDependencies": {
		"@babel/core": "^7.4.3",
		"@babel/plugin-external-helpers": "^7.2.0",
		"@babel/plugin-proposal-class-properties": "^7.4.0",
		"@babel/plugin-proposal-decorators": "^7.4.0",
		"@babel/preset-env": "^7.4.3",
		"@babel/preset-typescript": "^7.3.3",
		"@babel/register": "^7.4.0",
		"@commitlint/cli": "^7.5.2",
		"@commitlint/config-conventional": "^7.5.0",
		"@semantic-release/changelog": "^3.0.2",
		"@semantic-release/git": "^7.1.0-beta",
		"@types/benchmark": "^1.0.31",
		"@types/mocha": "^5.2.6",
		"@types/node": "^11.13.5",
		"babel-plugin-fix-class-properties-uninitialized": "^1.3.0",
		"babel-plugin-istanbul": "^5.1.2",
		"babel-plugin-transform-es3-member-expression-literals": "^6.22.0",
		"babel-plugin-transform-es3-property-literals": "^6.22.0",
		"babel-register-ts": "^7.0.0",
		"benchmark": "^2.1.4",
		"commitizen": "^3.1.0",
		"console-polyfill": "^0.3.0",
		"cross-env": "^5.2.0",
		"cz-conventional-changelog": "^2.1.0",
		"dts-bundle-generator": "^3.0.0",
		"husky": "^1.3.1",
		"jsdom": "^14.0.0",
		"jsdom-global": "^3.0.2",
		"json3": "^3.3.2",
		"karma": "^4.1.0",
		"karma-bench": "^0.1.3",
		"karma-benchmark-reporter": "^0.1.1",
		"karma-chrome-launcher": "^2.2.0",
		"karma-coverage": "^1.1.2",
		"karma-expect": "^1.1.3",
		"karma-firefox-launcher": "^1.1.0",
		"karma-ie-launcher": "^1.0.0",
		"karma-mocha": "^1.3.0",
		"karma-rollup": "^1.0.1",
		"karma-sauce-launcher": "^2.0.2",
		"karma-spec-reporter": "0.0.32",
		"mocha": "^2.5.3",
		"npm-run-all": "^4.1.5",
		"nyc": "^14.0.0",
		"prettier": "^1.17.0",
		"rimraf": "^2.6.3",
		"rollup": "^1.10.1",
		"rollup-plugin-babel": "^4.3.2",
		"rollup-plugin-commonjs": "^9.3.4",
		"rollup-plugin-jscc": "^1.0.0",
		"rollup-plugin-json": "^4.0.0",
		"rollup-plugin-node-resolve": "^4.2.3",
		"rollup-plugin-progress": "^1.1.1",
		"rollup-plugin-prototype-minify": "^1.0.5",
		"rollup-plugin-terser": "^4.0.4",
		"rollup-plugin-visualizer": "^1.1.1",
		"semantic-release": "^16.0.0-beta",
		"ts-node": "^8.1.0",
		"tslint": "^5.16.0",
		"tslint-config-prettier": "^1.18.0",
		"tslint-plugin-prettier": "^2.0.1",
		"tslint-sonarts": "^1.9.0",
		"typedoc": "^0.14.2",
		"typedoc-plugin-example-tag": "^1.0.2",
		"typedoc-plugin-external-module-name": "^2.0.0",
		"typescript": "^3.4.4"
	}
}
